@model AgenciaForest.Models.ComprarPassagem

@{
    ViewData["Title"] = "Create";
}
 <header>
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container-fluid">
              <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                  <img src="/img/logo.png" alt="">
              </a>
              <button class="navbar-toggler" type="button" tab-pane fade data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation" bg="white">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                  
                  <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Promocoes">PROMOÇÕES</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Destinos">DESTINOS</a>
                  </li>
                
                   <li class="nav-item">
                    <a class="nav-link"asp-controller="CadastrarPassagems" asp-action="Index">CADASTRO PASSAGENS</a>
                  </li>

                   <li class="nav-item">
                    <a class="nav-link"asp-controller="ComprarPassagems" asp-action="Index">COMPRAR PASSAGENS</a>
                  </li>

                   <li class="nav-item">
                    <a class="nav-link"asp-controller="Home" asp-action="Contato">CONTATO</a>
                  </li>


                </ul>
              </div>
            </div>
          </nav>
    </header>


<div class="container">
    

    <h4>Comprar Passagem</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="DestinoPassagem" class="control-label">Seu Nome</label>
                    <input asp-for="DestinoPassagem" class="form-control" />
                    <span asp-validation-for="DestinoPassagem" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ValorPassagem" class="control-label">Telefone</label>
                    <input asp-for="ValorPassagem" class="form-control" />
                    <span asp-validation-for="ValorPassagem" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="cadastrarPassagem" class="control-label">Escolha o Destino</label>
                    <select asp-for="cadastrarPassagem" class ="form-control" asp-items="ViewBag.cadastrarPassagem"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Criar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Voltar a pagina anterior</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</div>